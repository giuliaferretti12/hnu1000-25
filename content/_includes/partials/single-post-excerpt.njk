{%- set postDate -%}{{ post.data.date|readableDate }}{%- endset -%}
<a href="{{ post.url }}">
  <article>
    <header>
      <h2 class="post-title">{{ post.data.title }}</h2>
    </header>
    <div class="excerpt"> 
      {% excerpt post %}
    </div>
    <div class="post-meta">
        <time>{{ postDate }}</time>
    </div>
  </article>
</a>